            android:key="game_resolution"
            android:summary=""
            android:title="M超分" />

        <!--TODO 添加描述-->
        <rikka.material.preference.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="turbo"
            android:summary=""
            android:title="修改调度" />
    </PreferenceCategory>

    <PreferenceCategory android:title="关于">
        <!--TODO 更新日志-->
